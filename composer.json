{
    "name": "libok/libok",
    "description": "A clean architecture PHP project boilerplate.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Exsofth Solutions",
            "email": "contact@exsofth.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "doctrine/orm": "~2.15",
        "doctrine/dbal": "~3.6",
        "symfony/yaml": "~6.2",
        "vlucas/phpdotenv": "~5.5",
        "ramsey/uuid": "~4.7",
        "symfony/http-foundation": "~6.3",
        "symfony/cache": "~7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~10.0"
    },
    "autoload": {
        "psr-4": {
            "Libok\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "schema-create": "vendor/bin/doctrine orm:schema-tool:create",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@php -S localhost:8000 -t public"
        ],
        "test": "vendor/bin/phpunit --colors=always --display-deprecations --display-notices --display-warnings"
    }
}
